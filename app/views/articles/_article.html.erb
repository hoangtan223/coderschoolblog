  <div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-xs-12">
      <div class="card">
        <div class="card-block">
        <h4 class="card-title"><%= link_to article.title, article_path(article) %></h4>
          <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
        </div>
        <div class="card-footer">
          <% if article.is_editable %>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning'%>
          <% end %>
          <% if article.is_deletable %>
          <%= link_to 'Delete', article_path(article), :method => :delete, class: 'btn btn-danger', data: { confirm: "Are you sure?"}  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>