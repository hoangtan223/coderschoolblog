<div class="container">
<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
	<strong>View count:</strong>
	<%= @article.view_count %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<% @article.comments.each do |comment| %>
<div class="row">
	<p><%= comment.body %></p>
</div>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
</div>